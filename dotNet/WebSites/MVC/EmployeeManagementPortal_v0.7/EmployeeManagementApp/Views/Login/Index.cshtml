@model EmployeeManagementApp.Models.User

@{
    Layout = null;
}

@{
    ViewBag.Title = "Login";
}

@if (Session["UserID"] != null)
{
    Response.Redirect("~/Dashboard/DashIndex");
}

<html>

<head>



    <style>
        #login-div {
            position: absolute;
            top: 40%;
            left: 40%;
            border: 2px solid gray;
            padding: 10px 10px;
        }
    </style>
</head>
<body style="background:url(~/Images/bg6.jpg)">
    <div id="login-div">
        @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td colspan="2" align="center">
                        Login
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.UserName) </td>
                    <td>
                        @Html.EditorFor(model => model.UserName)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Password) </td>
                    <td>
                        @Html.EditorFor(model => model.Password)
                    </td>

                </tr>
                <tr align="center">
                    <td colspan="2" align="center">
                        <input type="submit" value="Login" />
                        <input type="reset" value="Clear" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="color:red;">
                        @Html.DisplayFor(model => model.ErrorMessage)
                        @Html.ValidationMessageFor(model => model.UserName)
                        <br />
                        @Html.ValidationMessageFor(model => model.Password)
                    </td>
                </tr>
            </table>
        }
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>

